<%- include('partials/header') %>

    <h1><%= title %>: <%= genre.name %></h1>
    <p><%= genre.lifespan %></p>
    
    <% if (genre_books.length) { %>    
        <p><strong>Delete the following books before attempting to delete this author.</strong></p>
        <div style='margin-left:20px;margin-top:20px'>
            <h4>Books</h4>
            <dl>
                <% author_books.forEach(function (book) { %>
                    <dt>
                        <a href="<%= book.url %>"><%= book.title %></a>
                    </dt>
                    <dd><%= book.summary %></dd>
                <% }) %>
            </dl>
        </div>

    <% } else { %>
        <p>Do you really want to delete this Genre?</p>
        
        <form method='POST' action=''>
            <div class='form-group'>
              <input id='genrename' class='form-control' type='hidden' name='genrename' required='true' value='<%= genre.id %>'>
            </div>
            <button class='btn btn-primary' type='submit'>Delete</button>
          </form>

    <% } %>

<%- include('partials/footer') %>