<%- include('partials/header') %>

    <h1><%= title %></h1>

    <form action="" method="post">
        <div class="form-group">
            <label for="book">Book:</label>
            <select name="book" id="book" class="form-control" type='select' placeholder='Select book' name='book' required='true'>
                <%= book_list.sort(function(a, b) {let textA = a.title.toUpperCase(); let textB = b.title.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;}); %>
                <% for( let book of book_list) { %>
                    <option value="<%= book.id %>" selected=""><%= book.title %></option>
                <% } %>
            </select>
        </div>
        <div class="form-group">
            <label for="imprint">Imprint:</label>
            <input type="text" class="form-control" type='text' placeholder='Publisher and date information' name='imprint' required='true' value="<%= (typeof bookinstance === 'undefined') ? '' : bookinstance.imprint %>">
        </div>
        <div class="form-group">
            <label for="due_back">Date when book available:</label>
            <input type="date" class="form-control" name='due_back' value="<%= (typeof bookinstance === 'undefined') ? '' : bookinstance.due_back %>">
        </div>
        <div class="form-group">
            <label for="status">Status:</label>
            <select name="status" id="status" class="form-control" type='select' placeholder='Select status' required="true">
                <option value="Maintenance">Maintenance</option>
                <option value="Available">Available</option>
                <option value="Loaned">Loaned</option>
                <option value="Reserved">Reserved</option>
            </select><br>
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </form>


<%- include('partials/footer') %>